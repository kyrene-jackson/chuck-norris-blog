<% @post.each do |post| %>
<h2 class="title"><%= link_to post.title, post %></h2>
<p class="date">
  <%= post.created_at.strftime("%B, %d, %Y") %>
</p>
<p class="show-edit">
  <%= link_to 'Show', post_path(post), :class => 'waves-effect waves-light btn blue-grey darken-1' %>
  <%= link_to 'Edit', edit_post_path(post), :class => 'waves-effect waves-light btn' %>
  <%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' }, :class => 'waves-effect waves-light btn red darken-4'  %>
</p>
<% end %>
